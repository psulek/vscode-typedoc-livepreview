{
    "name": "typedoc-live-preview",
    "displayName": "TypeDoc Live Preview",
    "description": "Live preview of typescript documentation (typedoc)",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "typedocLivePreview.showPreview",
                "title": "TypeDoc: Show TypeDoc Preview"
            }
        ]
    },
    "scripts": {
        "postinstall": "patch-package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test2": "ts-node src/typedoc.spec.ts",
        "test-cases": "node ./out/typedoc.spec.js",
        "create-patch": "npx patch-package typedoc"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/lodash.debounce": "^4.0.7",
        "@types/lodash.throttle": "^4.1.7",
        "@types/markdown-it": "12.2.3",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.79.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "chalk": "^4.0.0",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "patch-package": "^7.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "fs-extra": "^6.0.0",
        "glob-all": "3.3.1",
        "lodash.debounce": "^4.0.8",
        "lodash.throttle": "^4.1.1",
        "markdown-it": "13.0.1",
        "typedoc": ">=0.24.8",
        "typedoc-plugin-markdown": "^4.0.0-next.16"
    }
}
