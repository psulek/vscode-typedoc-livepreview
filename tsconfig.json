{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
		"strict": true
	},
    "exclude": [
        "node_modules/typedoc/**/*",
        "preview.ts",
        "test-data",
        "out"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "target": "es2017",
            "module": "Node16"
        }
    }
}
